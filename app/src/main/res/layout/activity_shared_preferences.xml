<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.ngekoding.androidbinaracademy.SharedPreferencesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Shared Preferences" />

    <EditText
        android:id="@+id/et_shared_pref_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Key" />

    <EditText
        android:id="@+id/et_shared_pref_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Value" />

    <Button
        android:id="@+id/btn_shared_pref_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/btn_shared_pref_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get" />

</LinearLayout>
